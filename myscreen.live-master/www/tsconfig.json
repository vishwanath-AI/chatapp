    "moduleResolution": "node",
    "strict": true,
    "strictNullChecks": true,
    "noImplicitReturns": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["dom", "es2015"],
    "sourceMap": true
